{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "spring": {
        "application": {
            "name": "sprints-service"
        }
    },

    "eureka": {
        "client": {
            //"serviceUrl": "http://localhost:8761/eureka/",
            "serviceUrl": "http://host.docker.internal:8761/eureka/",
            "shouldRegisterWithEureka": true,
            "shouldFetchRegistry": true
        },
        "instance": {
            "appName": "sprints-service",
            "hostName": "sprints-service",
            "port": 8084,
            "ipAddress": "sprints-service",
            "preferIpAddress": true,
            "leaseRenewalIntervalInSeconds": 30,
            "leaseExpirationDurationInSeconds": 90,
            "metadataMap": {
                "zone": "primary",
                "profile": "default",
                "version": "1.0"
            }
        },

        "ConnectionStrings": {
            "DefaultConnection": "Host=localhost;Port=5432;Database=TaskFlowDB;Username=postgres;Password=postgres;Search Path=sprints_service_schema"
        },

        "ServiceAuth": {
            "GatewaySecretHeader": "X-Gateway-Source",
            "GatewaySecretValue": "dev-secret-key-change-in-prod",
            "ApplicationName": "sprints-service"
        },

        "Gateway": {
            "BaseUrl": "http://gateway-service:8080",
            "ServiceDiscoveryName": "gateway-service",
            "UseServiceDiscovery": true
        },
        "PublicEndpoints": [
            "/healthz",
            "/swagger"
        ]
    }
}