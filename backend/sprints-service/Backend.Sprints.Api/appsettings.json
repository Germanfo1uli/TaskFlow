{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "spring": {
        "application": {
            "name": "sprints-service"
        }
    },

    "eureka": {
        "client": {
            "serviceUrl": "http://localhost:8761/eureka/",
            //"serviceUrl": "http://host.docker.internal:8761/eureka/",
            "shouldRegisterWithEureka": true,
            "shouldFetchRegistry": true
        },
        "instance": {
            "appName": "sprints-service",
            "hostName": "sprints-service",
            "port": 8084,
            "ipAddress": "sprints-service",
            "preferIpAddress": true,
            "leaseRenewalIntervalInSeconds": 30,
            "leaseExpirationDurationInSeconds": 90,
            "metadataMap": {
                "zone": "primary",
                "profile": "default",
                "version": "1.0"
            }
        }
    },

    "ConnectionStrings": {
        "Default": "Host=localhost;Port=5432;Database=TaskFlowDB;Username=postgres;Password=postgres;Search Path=sprints_service_schema"
    },

    "ServiceAuth": {
        "GatewaySecretHeader": "X-Gateway-Source",
        "GatewaySecretValue": "dev-secret-key-change-in-prod",
        "ApplicationName": "sprints-service"
    },

    "PublicEndpoints": [
        "/swagger",
        "/swagger/**",
        "/swagger-ui/**",
        "/swagger-ui.html",
        "/v3/api-docs",
        "/v3/api-docs/**",
        "/healthz"
    ],

    "Swagger": {
        "Enabled": true,
        "RoutePrefix": "swagger",
        "Servers": [
            {
                "Url": "http://localhost:8000",
                "Description": "Local Development"
            },
            {
                "Url": "http://26.35.172.29:8000",
                "Description": "Raspberry Pi Network"
            }
        ]
    }
}