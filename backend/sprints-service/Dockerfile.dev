FROM mcr.microsoft.com/dotnet/sdk:8.0-jammy

WORKDIR /src

COPY . .

RUN dotnet restore ./sprints-service/Backend.Sprints.Api/Backend.Sprints.Api.csproj

RUN apt-get update && \
    apt-get install -y curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

EXPOSE 8084

WORKDIR /src/sprints-service/Backend.Sprints.Api

CMD ["dotnet", "run"]