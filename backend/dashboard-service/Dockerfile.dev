FROM mcr.microsoft.com/dotnet/sdk:8.0-alpine

WORKDIR /src

COPY . .

RUN apk update && apk add --no-cache curl ca-certificates

WORKDIR /src/dashboard-service

RUN dotnet restore Backend.Dashboard.sln --verbosity detailed --force

# Переходим в папку с проектом API
WORKDIR /src/dashboard-service/Backend.Dashboards.Api

CMD ["sh", "-c", "\
    sleep 5 && \
    dotnet restore --force && \
    dotnet run --urls http://*:8085"]