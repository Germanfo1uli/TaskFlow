{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "MassTransit": "Debug"
        }
    },
    "AllowedHosts": "*",

    "spring": {
        "application": {
            "name": "dashboard-service"
        }
    },

    "eureka": {
        "client": {
            "serviceUrl": "http://localhost:8761/eureka/",
            //"serviceUrl": "http://host.docker.internal:8761/eureka/",
            "shouldRegisterWithEureka": true,
            "shouldFetchRegistry": false
        },
        "instance": {
            "hostname": "dashboard-service",
            //"hostname": "host.docker.internal",
            "nonSecurePort": 8085,
            "leaseRenewalIntervalInSeconds": 30,
            "leaseExpirationDurationInSeconds": 90
        }
    },

    "ConnectionStrings": {
        "Default": "Host=localhost;Port=5432;Database=TaskFlowDB;Username=postgres;Password=postgres;Search Path=dashboard_service_schema"
    },

    "RabbitMq": {
        "Host": "rabbitmq-node",
        "Username": "guest",
        "Password": "guest"
    },

    "ServiceAuth": {
        "GatewaySecretHeader": "X-Gateway-Source",
        "GatewaySecretValue": "dev-secret-key-change-in-prod",
        "ApplicationName": "dashboard-service"
    },

    "PublicEndpoints": [
        "/swagger",
        "/swagger/**",
        "/swagger-ui/**",
        "/swagger-ui.html",
        "/v3/api-docs",
        "/v3/api-docs/**",
        "/healthz"
    ],

    "Swagger": {
        "Enabled": true,
        "RoutePrefix": "swagger",
        "Servers": [
            {
                "Url": "http://localhost:8000",
                "Description": "Local Development"
            },
            {
                "Url": "http://26.35.172.29:8000",
                "Description": "Raspberry Pi Network"
            }
        ]
    }
}